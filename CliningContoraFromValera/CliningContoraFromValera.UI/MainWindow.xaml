<Window x:Class="CliningContoraFromValera.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CliningContoraFromValera.UI"
        mc:Ignorable="d"
        Title="ClilingFromValera" Height="500" Width="800" Background="White">
    <Grid>
        <TabControl x:Name="MainTabControl" Height="500" Width="800">

            <TabItem Header="Клиенты">
                <Grid Height="427" Margin="16,0,31,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60*"></ColumnDefinition>
                        <ColumnDefinition Width="40*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Content="Имя:" Grid.ColumnSpan="2" Margin="448,0,0,0"/>
                    <TextBox x:Name="TextBox_Name" Grid.Column="1" VerticalAlignment="Top" Margin="10,34,10,0" AcceptsReturn="True" MaxLength="255" Height="28" />
                    <Label Content="Фамилия:" Grid.ColumnSpan="2" Margin="448,80,0,-80"/>
                    <TextBox x:Name="TextBox_LastName" Grid.Column="1" VerticalAlignment="Top" Margin="10,114,10,0" AcceptsReturn="True" MaxLength="255" Height="28" />
                    <Label Content="Телефон:" Grid.ColumnSpan="2" Margin="448,161,0,-161"/>
                    <TextBox x:Name="TextBox_Phone" Grid.Column="1" VerticalAlignment="Top" Margin="10,196,10,0" AcceptsReturn="True" MaxLength="255" Height="29" />
                    <Label Content="Почта:" Grid.ColumnSpan="2" Margin="448,240,0,-240"/>
                    <Button x:Name="Button_ClientAdd" Content="Добавить" Margin="54,368,51,30" Grid.Column="1" Click="Button_ClientAdd_Click"/>
                    <TextBox  x:Name="TextBox_Email" Grid.Column="1" VerticalAlignment="Top" Margin="10,276,10,0" AcceptsReturn="True" MaxLength="255" Height="28" />

                    <DataGrid x:Name="DataGrid_Clients" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding ClientModel}" IsReadOnly="False" 
                              CanUserAddRows="False"
                              Margin="20,-2,19,67" Height="362" RenderTransformOrigin="0.5,0.5" Loaded="DataGrid_Clients_Loaded" CellEditEnding="DataGrid_Clients_CellEditEnding">
                        <DataGrid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="0"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </DataGrid.RenderTransform>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="90"></DataGridTextColumn>
                            <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="70"></DataGridTextColumn>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="90"></DataGridTextColumn>
                            <DataGridTextColumn Header="Почта" Binding="{Binding Email}" Width="90"></DataGridTextColumn>
                            <DataGridTemplateColumn Header="Удалить" Width="75">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button x:Name="Button_ClientDelete" Content="Удалить" Click="Button_ClientDelete_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="Button_ClientRefresh" Content="Обновить" Margin="315,368,19,30" Click="Button_ClientRefresh_Click"></Button>
                </Grid>
            </TabItem>


            <TabItem Header="Заказы">
                <Grid Height="437" Margin="10">
                    <TabControl>
                        <TabItem Header="Актуальные заказы">
                            <Grid Margin="10">
                                <DataGrid x:Name="DataGrid_AllOrders" Height="400"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Добавить заказ">
                            <Grid Height="382" Width="619" Margin="40, 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <ComboBox Grid.Column="0" Grid.Row="0" Text="TextBox" Margin="14"/>
                                <Label Grid.Column="0" Grid.Row="0" Content="Клиент" Margin="14,18,144,20"/>
                                <DatePicker Grid.Column="0" Grid.Row="1"  Margin="14"/>
                                <TextBox Grid.Column="0" Grid.Row="2" Text="Время начала" Margin="14"/>
                                <Label Grid.Column="0" Grid.Row="3" Content="Время конца" Margin="14" Background="#FFE5E5E5"/>
                                <ComboBox Grid.Column="0" Grid.Row="4" Text="TextBox" Margin="14"/>
                                <Label Grid.Column="0" Grid.Row="4" Content="Физ. лицо/Юр. лицо" Margin="14,18,144,20"/>
                                <ComboBox Grid.Column="1" Grid.Row="0" Text="TextBox" Margin="14"/>
                                <Label Grid.Column="1" Grid.Row="0" Content="Статус" Margin="14,18,144,20"/>
                                <TextBox Grid.Column="1" Grid.Row="1" Text="Адрес" Margin="14"/>
                                <ComboBox Grid.Column="1" Grid.Row="2" Text="TextBox" Margin="14"/>
                                <Label Grid.Column="1" Grid.Row="2" Content="Количество сотрудников" Margin="14,18,144,20"/>
                                <Label Grid.Column="1" Grid.Row="3" Content="Цена" Margin="14" Background="#FFE5E5E5"/>
                                <ComboBox Grid.Column="1" Grid.Row="4" Text="TextBox" Margin="14,14,59,14"/>
                                <Label Grid.Column="1" Grid.Row="4" Content="Услуги" Margin="14,18,144,20"/>
                                <Button Content="+" Grid.Column="1" Grid.Row="4" Margin="255,14,14,14" />
                                <Button Content="Создать заказ" Grid.Column="1" Grid.Row="5" Margin="14"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>

            </TabItem>
            <TabItem Header="Сотрудники">
                <Grid Height="437" Margin="10">
                    <TabControl>
                        <TabItem Header="Сотрудники">
                            <Grid Height="382" Margin="20,0,20,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <DataGrid Grid.Column="0" Grid.RowSpan="5" Grid.ColumnSpan="2" Margin="0,0,242,34">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Фамилия" Width="120"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Имя" Width="120"></DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <DataGrid Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="4" Margin="20,0,0,0"/>
                                <ComboBox Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Top" Height="44" Margin="20,0,0,0"/>
                                <Label Content="Персон инфа, скиллы, ворктайм" Grid.Column="1" Grid.ColumnSpan="2" Margin="20,0,223,20"/>
                                <Button Grid.Column="1" VerticalAlignment="Top" Grid.Row="5" Content="Сохранить" Margin="20,17,0,0" Height="47"/>
                                <Button Grid.Column="2" Content="Отменить" Grid.Row="5" Margin="20,17,0,0" Height="47"/>
                                <Button Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="5" Width="121" Height="34"/>
                                <Button Content="Редактировать" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="5" Width="121" Height="34"/>
                                <TextBox HorizontalAlignment="Center" Margin="0,35,0,0" Grid.Row="5" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="243" Height="29"/>
                                <Button Content="Удалить" VerticalAlignment="Bottom" Grid.Row="4" Height="34"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="График">
                            <Grid Height="382" Margin="80,0,80,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <TextBox Margin="10,0,473,40" Text="Выбор времени" Height="24" Width="125" Grid.Row="0"/>
                                <DatePicker Width="125" Height="24" Margin="10,35,473,5" Grid.Row="0"/>
                                <ComboBox Height="24" Width="125" Margin="176,0,176,38" Grid.Row="0"/>
                                <Label Content="Скилы" Margin="252,0,286,39" Grid.Row="0"/>
                                <Button Content="Найти смену" Margin="473,0,10,39" Width="125" Height="24" Grid.Row="0"/>
                                <Button Content="Найти сотрудника" Margin="473,35,10,5" Width="125" Height="24" Grid.Row="0"/>
                                <DataGrid x:Name="DataGrid_Schedule"
                                   AutoGenerateColumns="False" CanUserAddRows="False"  ItemsSource="{Binding EmployeeWorkTimeModel}"  Grid.RowSpan="4" Margin="10,0,10,10" Grid.Row="1" Loaded="DataGrid_Schedule_Loaded">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="115"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="115"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="115"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Начало смены" Binding="{Binding StartTime}" Width="115"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Конец смены" Binding="{Binding FinishTime}" Width="115"></DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <TextBox Margin="213,2,213,32" Grid.Row="5" TextWrapping="Wrap" Text="Начало смены" Width="182" Height="30"/>
                                <TextBox Margin="213,34,213,0" Grid.Row="5" TextWrapping="Wrap" Text="Конец смены" Width="182" Height="30"/>
                                <DatePicker Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="182" Height="30" Margin="10,34,0,0"/>
                                <ComboBox HorizontalAlignment="Left" Grid.Row="5" Width="182" Height="30" Margin="10,2,0,32"/>
                                <Label Content="Выбрать сотрудника" Margin="10,2,460,35" Grid.Row="5"/>
                                <Button Content="Редактировать смену" Grid.Row="5" Width="182" Height="30" Margin="416,2,10,32"/>
                                <Button Content="Добавить смену" Grid.Row="5" Width="182" Height="30" Margin="416,34,10,0"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>


            <!--услуги-->
            <TabItem Header="Наши услуги">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"></RowDefinition>
                        <RowDefinition Height="90*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60*"></ColumnDefinition>
                        <ColumnDefinition Width="40*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>


                    <Label Content="Выбери тип услуги:" Margin="10,5,0,0"></Label>
                    <ComboBox VerticalAlignment="Top" Margin="10,34,10,0">

                    </ComboBox>


                    <DataGrid Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="False"
                              CanUserAddRows="False"
                              Margin="10,0,10,20">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Тип" Width="80"></DataGridTextColumn>
                            <DataGridTextColumn Header="Услуга" Width="95"></DataGridTextColumn>
                            <DataGridTextColumn Header="Описание" Width="90"></DataGridTextColumn>
                            <DataGridTextColumn Header="~t" Width="40"></DataGridTextColumn>
                            <DataGridTextColumn Header="Цена" Width="50"></DataGridTextColumn>
                            <DataGridTextColumn Header="Комм. " Width="50"></DataGridTextColumn>
                            <DataGridTextColumn Header="Ед. изм/" Width="50"></DataGridTextColumn>
                        </DataGrid.Columns>

                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>

                    </DataGrid>

                    <Label Grid.Column="1" Content="Добавить новый тип услуг:" Margin="10,5,0,0"></Label>
                    <TextBox VerticalAlignment="Top" Margin="10,36,30,0" Grid.Column="1" MaxLength="50"/>
                    <Button Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right"
                            Content="+" Width="20" Margin="0,34,10,0" />

                    <Label Grid.Row="1" Grid.Column="1" Content="Добавить новую услугу:"
                           Margin="10,0,0,0"/>


                    <Label Grid.Row="1" Content="Название:" Margin="10,26,-5,10" Grid.Column="1" />
                    <TextBox Grid.Row="1" VerticalAlignment="Top" Margin="10,58,10,0" Grid.Column="1"
                             MaxLength="100" />

                    <Label Grid.Row="1" Grid.Column="1" Content="Описание:" Margin="10,78,10,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Margin="10,105,10,0"
                             AcceptsReturn="True" MaxLength="255" />

                    <Label  Grid.Row="1" Grid.Column="1" Content="Цена:" Margin="10,128,10,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Margin="10,158,10,0" />


                    <Label  Grid.Row="1" Grid.Column="1" Content="Коммерческая цена:" Margin="10,178,10,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Margin="10,208,10,0" />

                    <Label  Grid.Row="1" Grid.Column="1" Content="Единицы измерения:" Margin="10,228,10,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Margin="10,258,10,0" />


                    <Label  Grid.Row="1" Grid.Column="1" Content="Примерное время выполнения:" Margin="10,278,10,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Margin="10,308,10,0" 
                             MaxLength="10"/>


                    <Label  Grid.Row="1" Grid.Column="1" Content="Тип услуги:" Margin="10,333,230,0"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" Margin="93,338,10,49"/>

                    <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="10,318,10,12" Height="20">
                        <Button Content="Добавить" Margin="40,0,169,0" Width="86.7"/>
                        <Button Content="Очистить" Margin="100,-20,10,0" 
                                Width="86.7"/>
                    </StackPanel>




                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
